#!/bin/sh
# $Id$

HOST_OS=`uname -s`
if test "x${HOST_OS}" = "xDarwin"; then
	LIBTOOLIZE=glibtoolize
elif test "x${HOST_OS}" = "xLinux"; then
	LIBTOOLIZE=libtoolize
fi
set -x
${LIBTOOLIZE} --force --copy
aclocal -I config
autoheader
rm -f config/config.guess # XXX
automake --foreign --add-missing --copy
autoconf

# EOF
